{
  "builds": [
    {
      "src": "index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/index.js",
      "methods": ["GET", "POST", "PUT", "PATCH", "DELETE", "OPTIONS"]
    }
  ],
    "functions": {
    "api/cron.js": {
      "runtime": "nodejs22.x"
    }
  },
  "cron": [
    {
      "path": "/api/cron",
      "schedule": "0 * * * *"
    }
  ]
}
